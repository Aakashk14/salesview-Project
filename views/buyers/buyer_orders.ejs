<html>
    <link rel="stylesheet" href="/header.css">
    <script
    src="https://code.jquery.com/jquery-3.3.1.js"
    integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
    crossorigin="anonymous"></script>
    <style>
        body{
            background-color: rgb(215, 224, 233);

        }
         table{
            position: absolute;
            left:30px;
            top:20%;
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 60%;
            overflow: hidden;
        
          /*  background-color: rgba(224, 233, 223, 0.87); */
        

        }
        td, th{
            border: 1px solid #ddd;
            padding: 8px;

        }
         th{
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0c266d;
            color: rgb(222, 228, 236);
        }
         td{
            max-width: 100px;
            overflow-x: hidden;
            font-family: Arov;
        }
        #opps{
position: relative;
left:30%;
top:20px;

        }
    </style>
    <script>
        $(()=>{
            $(".main").load("/header1.html")
        })
    </script>
    <body>
        <div class="orders">
            <% if(result.orders.length ==0) {%>
            <p id="opps"> No orders ?, Get a product link from Seller<br> and Make sure Link is Activated</p>
             <% } %>
            <table id="tb_orders">

                <tr>
                <th>Order_id</th>
                <th>Status</th>
                <th>Seller</th>
                <th>Action</th>
                </tr>
                    
                <% for(let i=0;i<result.orders.length;i++){ %>
               
                
                    <tr>
                        <td><%= result.orders[i].order_id %></td>
                        <td> <%= seller_info[result.orders[i].seller_id] %></td>
                    
                    <td><a href="/details">Details</a></td>

                    </tr>
               <% } %>
            </table>
        </div>
        <div class="main">

        </div>
    </body>
</html>