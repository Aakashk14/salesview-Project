<html>
    
    <style>
        .purchase{
            height: 530px;
            width: 600px;
            position: relative;
            left:10px;
            border:2px solid
        }
        #title{
            border:2px solid black;
            position: relative;
            bottom:17px;
            text-align: center;
        }
        #name{
         position: relative;
         left:150px;
        }
        .details label{
            margin-left:10px;
            position: relative;
            left:40px;
            top:28px;
        }
        .details input{
            display: block;
            margin: 10px;
        }
        .details_payment{
            position: relative;
            top:1px;
            
        }
        .payment #title{
            top:60px;
        }
        
        #payment_1{
            position: relative;
            top:82px;
            display: block;
            left:50px;
        }
        .details_payment label{
            position: relative;
            top:100px;
            left:100px;
        }
        #sbmt{
            position: relative;
            top:240px;
            width: 140px;
            left:40%;
            height: 60px;
            border-radius: 4px;
            background-color: rgb(14, 83, 161);
            font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
        }
        .about{
        width: 400px;
        height: 300px;
        position: relative;
        left:700px;
        bottom:520px;
        padding: 10px;
        border: 4px solid rgb(132, 132, 139);
        background-color: #8d8080;
        
    }
    #item_image{
        position: relative;
        left:40%;

    }
    .about #name {
        font-size: larger;
        margin:14px;
        display: inline-block;
        cursor: default;
        position: relative;
        bottom: 140px;
        right:100px;

    }
    #note{
        position: relative;
        bottom:20px;
        left:10px;
    }

    </style>
    <body>
        <div class="purchase">
            <form method="POST" action="/payment/<%= data.userid %>/<%= data.items[0].identity %>">
            <p id="title">Shipping Details</p>
            <div class="details">
               <label for="name">Name</label> <input type="text" id="name" name="name" value="">
                </input>
                <label for="name">Street</label> <input type="text" id="name" name="street" value="">

                <label for="name">City</label> <input type="text" id="name" name="city" value="">


            </div>
            <div class="payment">
                <p id="title">Payment Details</p>
                <div class="details_payment">
                   <label for="payment_1">Wallet</label> <input type="radio" name="payment" id="payment_1" value="Wallet">
                   <label for="payment_1">COD</label> <input type="radio" name="payment" id="payment_1" value="Wallet">
                   <p id="note">Since its a demo project, you can select any &submit</p>

                </div>
            </div>
            <input type="submit" id="sbmt" value="Buy">
            </form>
        </div>
        
        <div class="about" style="display: none;">
            <p id="name" >name</p>
            <img id="item_image" width="100px" height="200px" src="/image_pvt/1/xE8b/Screenshot_2.png">
        </div>
    </body>
</html>
